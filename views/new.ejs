<style>
	.container{
		border: 2px solid black;
		
	}
	form{
		width:50%;
		margin: 0 auto;
		color:black;
	}
</style>
<%- include("partials/header") %>

<div class=" ui center aligned container ">
	<h2>Upload New Bikes</h2>
	<form action="/index"  method="POST"  class="ui form">
		<div class="field">
		 <input type="text" placeholder="brand" name="bike[brand]">	
		</div>
		<div class="field">
		 <input type="text" placeholder="image"  name="bike[image]">	
		</div>
		<div class="field">
		 <input type="text" placeholder="model"  name="bike[model]">	
		</div>
		<div class="field">
		 <input type="text" placeholder="engine" name="bike[Engine]">	
		</div>
		<div class="field">
		 <input type="text" placeholder="cost"  name="bike[cost]">	
		</div>
		<div class="field">
		 <input type="text" placeholder="gear" name="bike[gear]">	
		</div>
		<div class="field">
		 <input type="text" placeholder="category" name="bike[category]">	
		</div>
		<button type="submit" class="ui button big ">Upload</button>
		<button type="reset" class="ui button red big ">Reset</button>
		
	</form>
</div>

<%- include("partials/footer") %>